#!/bin/sh

#include functions from script
. /etc/scripts/functions

start() {
    echo "Start loopback network interface..."
    ifconfig br0 up
}

stop() {
    echo ""
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
