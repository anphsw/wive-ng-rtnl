#!/bin/sh

start() {
 echo "Start goahead"
    killall -q nvram_daemon
    echo "Copy web pages to tmpfs"
    mkdir -p /tmp/web
    cp -rpf /web/* /tmp/web
    echo "Run goahead"
    /bin/goahead &
    echo > /tmp/webrun
    sleep 10
}

stop() {
 echo "Stop goahead"
    killall -q goahead
    killall -q nvram_daemon
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
