#!/bin/sh

# if app not exist
if [ ! -f /bin/udpxy ]; then
    exit 0
fi

# get params
. /etc/scripts/global.sh

LOG="logger -t udpxy"

start() {
    get_param
    if [ "$UDPXYMode" != "0" ] && [ "$UDPXYMode" != "" ] && [ "$UDPXYPort" != "" ]; then
        $LOG "UDPXY start"
	udpxy -m $wan_if -n-20 -c1 -H10 -R-1 -B64k -p"$UDPXYPort" -l /var/log/udpxy.log
    fi
}

stop() {
  $LOG "UDPXY stop"
    killall -q udpxy
    killall -q -SIGKILL udpxy
}

get_param() {
    eval `nvram_buf_get 2860 UDPXYMode UDPXYPort`
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
