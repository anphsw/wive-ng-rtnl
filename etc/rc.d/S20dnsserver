#!/bin/sh

#get params
. /etc/scripts/global.sh

LOG="echo DNSSERVER: "

start() {
    get_param
    if [ -f /bin/dnsmasq ] && [ -f /etc/dnsmasq.conf ] && [ "$dnsp" = "1" ]; then
        $LOG "Starting DNSMASQ: "
    	/bin/dnsmasq -c 100 -N --dns-forward-max=30 --clear-on-reload --leasefile-ro \
	    -u "$admID" -g nobody -C /etc/dnsmasq.conf -r "$fname" -H /etc/hosts -f -I "$wan_if" &
    fi
}

stop() {
 $LOG "Stopping DNSMASQ: "
  killall -q dnsmasq
  sleep 1
  killall -q -9 dnsmasq
  rm -rf /var/run/dnsmasq.pid > /dev/null 2>&1
}

get_param() {
    dnsp=`nvram_get 2860 dnsPEnabled`
    admID=`nvram_get 2860 Login`
    fname="/etc/resolv.conf"
}

case "$1" in
        start)
            start
            ;;

        stop)
            stop
            ;;

        restart)
            stop
            start
            ;;

        *)
            echo $"Usage: $0 {start|stop|restart}"
            exit 1
esac
