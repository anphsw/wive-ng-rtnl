#!/bin/sh

#get params
. /sbin/global.sh

start() {
 echo "Starting IGMPPROXY: "
    igmp=`nvram_get 2860 igmpEnabled`
    if [ "$igmp" = "1" ]; then
        config-igmpproxy.sh $wan_if $lan_if
    fi
 echo " Ok"
}

stop() {
 echo "Stopping IGMPPROXY: "
  killall igmpproxy
 echo " Ok"
}

case "$1" in
        start)
            start
            ;;

        stop)
            stop
            ;;

        restart)
            stop
            start
            ;;

        *)
            echo $"Usage: $0 {start|stop|restart}"
            exit 1
esac
