#!/bin/sh

#get params
. /etc/scripts/global.sh

#wait to start web and run from goahead code
web_wait

LOG="logger -t VPN:"

start() {
    if [ "$vpnEnabled" = "on" ]; then
      get_param

      #wait connetc to ap in sta mode
      #if VPN=PPPOE and IFACE=LAN no need wait
      if [ "$vpnType" != "0" ]; then
        wait_connect
      else
	if [ "$IFACE" != "LAN" ]; then
    	    wait_connect
	fi
      fi

      $LOG "Start vpnhelper"
      #clear all configs and generate new
      echo > $ppp/chap-secrets
      echo > $ppp/pap-secrets
      echo > $ppp/connect-errors
      echo "$USER * $PASSWORD *" > $ppp/chap-secrets
      echo "$USER * $PASSWORD *" > $ppp/pap-secrets

      #call to vpn
      if [ "$vpnType" = "0" ]; then
	$LOG "PPPOE calling..."
	(sleep 5 && /etc/scripts/config-pppoe.sh) &
      elif [ "$vpnType" = "1" ]; then
	$LOG "PPTP calling..."
	(sleep 5 && /etc/scripts/config-pptp.sh) &
      elif [ "$vpnType" = "2" ]; then
	$LOG "L2TP calling..."
	(sleep 5 && /etc/scripts/config-l2tp.sh) &
      elif [ "$vpnType" = "6" ]; then
	if [ "$lanauthpid" != "" ]; then
	    $LOG "LANAUTH call reload..."
	    /etc/scripts/config-lanauth.sh reload &
	else
	    $LOG "LANAUTH calling..."
	    (sleep 5 && /etc/scripts/config-lanauth.sh start) &
	fi
      fi
    fi
}

stop() {
 $LOG "Stop vpnhelper"
    #Kill helpers
    killall -q config-pppoe.sh
    killall -q config-l2tp.sh
    killall -q config-pptp.sh
    killall -q config-lanauth.sh
    killall -q -9 config-pppoe.sh
    killall -q -9 config-l2tp.sh
    killall -q -9 config-pptp.sh
    killall -q -9 config-lanauth.sh

    #Kill daemons
    killall -q xl2tpd
    killall -q -9 xl2tpd
    killall -q pppd
    killall -q -9 pppd

    #Kill lanauth only if vpn disable
    if [ "$vpnEnabled" = "off" ] || [ "$vpnType" != "6" ]; then
	    /etc/scripts/config-lanauth.sh stop
    fi

    #Remove modules
    rmmod ppp_mppe > /dev/null 2>&1
    rmmod blkcipher > /dev/null 2>&1
    rmmod cryptomgr > /dev/null 2>&1
    rmmod crypto_algapi > /dev/null 2>&1
    rmmod pppol2tp > /dev/null 2>&1
    rmmod pptp     > /dev/null 2>&1
    rmmod ppp_generic     > /dev/null 2>&1

    #Remove VPN server IP file
    rm -f /tmp/vpnip
}

get_param() {
    IFACE=`nvram_get 2860 vpnInterface`
    USER=`nvram_get 2860 vpnUser`
    PASSWORD=`nvram_get 2860 vpnPassword`
    lanauthpid=`pidof lanauth`
    ppp=/etc/ppp
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
