#!/bin/sh

LOG="echo MEMFREE: "

start() {

 $LOG "Unload unneeded modules"
    rmmod -a

 #if firts boot or restore
 if [ -f /var/MODIFIED ]; then
    if [ -f /etc/dropbear/dropbear_dss_host_key ]; then
    ($LOG "Save rwfs" && sleep 10 && fs save)
    else
    ($LOG "Save rwfs" && sleep 30 && fs save)
    fi
 fi

}

stop() {
 $LOG " "
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
