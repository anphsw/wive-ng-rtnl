#!/bin/sh

start() {
 echo "Set current password"
    #get user/password    
    admID=`nvram_get 2860 Login`
    if [ "$admID" = "" ]; then
        admID="Admin"
        nvram_set 2860 Login Admin
    fi

    admPW=`nvram_get 2860 Password`
    if [ "$admPW" = "" ]; then
        admPW="Admin"
        nvram_set 2860 Password Admin
    fi

    #generate files
    echo "$admID::0:0:Adminstrator:/:/bin/sh" > /etc/passwd
    echo "$admID:x:0:$admID" > /etc/group
    echo "nobody:x:99:99:Nobody:/:" >> /etc/passwd
    echo "nobody:x:99:" >> /etc/group

    #set new password
    echo "$admID:$admPW" > /tmp/tmpchpw
    chpasswd < /tmp/tmpchpw
    rm -f /tmp/tmpchpw
}

stop() {
 echo "OK"
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
