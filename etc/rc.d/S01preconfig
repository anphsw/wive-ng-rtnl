#!/bin/sh

start() {
 echo "Preconfigure..."
    export PATH=.:$PATH:/bin:/sbin:/usr/bin:/usr/sbin:/etc/scripts

    echo "Init RW etc and dev particion" > /dev/console
    zcat /dev.gz | /bin/tar xf - -C /
    zcat /rwfs.gz | /bin/tar xf - -C /
    
    echo "Mount all filesystems"
    mount -a
    mount -t devpts /dev/pts /dev/pts
    
    echo "Create some folders"
    mkdir -p /var/run
    mkdir -p /var/lock
    mkdir -p /var/lock/subsys
    mkdir -p /var/log
}

stop() {
 echo "Stop preconfigure."
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
