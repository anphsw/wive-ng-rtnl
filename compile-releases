#!/bin/sh

PWD=`pwd`

if [ "$1" = "" ]; then
    MODE=acorp
else
    MODE=$1
fi

rm -rf $PWD/releases
mkdir -p $PWD/releases

./clear
nice -19 ./compile 2T2R $MODE
cp -f $PWD/images/*.zip $PWD/releases

./clear RELEASE
nice -19 ./compile 1T1R $MODE
cp -f $PWD/images/*.zip $PWD/releases

./clear RELEASE
nice -19 ./compile 1T1R-16 $MODE
cp -f $PWD/images/*.zip $PWD/releases
