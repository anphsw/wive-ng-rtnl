#!/bin/sh

#get params
. /etc/scripts/global.sh

LOG="echo BRSTP: "

start() {
    if [ "$wan_if" = "br0" ] || [ "$lan_if" = "br0" ]; then
	$LOG "Config br-stp: "
        stp=`nvram_get 2860 stpEnabled`
        if [ "$stp" = "1" ]; then
                brctl setfd br0 15
                brctl stp br0 1
        else
                brctl setfd br0 1
                brctl stp br0 0
        fi
    fi
}

stop() {
 $LOG "Disable stp on br0 "
    brctl setfd br0 1 > /dev/null 2>&1
    brctl stp br0 0 > /dev/null 2>&1
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
