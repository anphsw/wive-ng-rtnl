menu "Ralink Module"

###########
# Debuging
###########
source "drivers/net/rt_rdm/Kconfig"

#############
# Wire
#############
menu "Ethernet Ralink RT3xx/RT28xx wire driver."
source "drivers/net/raeth/Kconfig"
endmenu

#############
# Wireless
#############
menu "Platform config for  Ralink RT3xx/RT28xx."
choice
        prompt "RF Type"
        depends on RALINK_RT3052 || RALINK_RT3352
        default RALINK_RT3052_2T2R

        config  RALINK_RT3050_1T1R
        bool "RT3050-1T1R"

        config  RALINK_RT3051_1T2R
        bool "RT3051-1T2R"

        config  RALINK_RT3052_2T2R
        bool "RT3052-2T2R"
endchoice
choice
	prompt "RF Type"
	depends on RALINK_RT3883

	config  RALINK_RT3662_2T2R
	bool "2T3R (RT3662)"

	config  RALINK_RT3883_3T3R
	bool "3T3R (RT3883)"
endchoice
endmenu

# split driver in one dir
menu "AP MODE Ralink RT3xx/RT28xx wireless driver."
source "drivers/net/wireless/rt2860v2/rt2860v2_ap/Kconfig"
endmenu
menu "STA/Client MODE Ralink RT3xx/RT28xx wireless driver."
source "drivers/net/wireless/rt2860v2/rt2860v2_sta/Kconfig"
endmenu

menu "Nat acell mode"
choice                                                                                                                                      
        prompt "Hardware nat mode"
        depends on RALINK_RT3052
        default RA_NAT_NONE

config  RA_NAT_HW
	select RA_HW_NAT
        bool "Hardware NAT acceleration"

config RA_NAT_NONE
        bool "Disable NAT acceleration"
endchoice

config BCM_NAT
        tristate "Broadcom fast NAT support"
        depends on NF_CONNTRACK && NF_NAT
        default y
        help
                This helps packets pass through netfilter faster when a packet
                is an established or reply traffic.

if RA_NAT_HW
menu "Ralink RT3xx/RT28xx NAT Acell support."
source "net/nat/hw_nat/Kconfig"
endmenu
endif
endmenu

config RTDEV_USB
bool
default y if RT305x_INIC_USB || RT3572_AP

config RTDEV_MII
bool
default y if RT2880v2_INIC_MII || RT305x_INIC_MII

config RTDEV_PCI
bool
default y if RT2880v2_INIC_PCI || RT3090_AP

#######
# USB
#######
source "drivers/usb/dwc_otg/Kconfig"

config RT3XXX_EHCI_OHCI
	bool "Ralink USB EHCI/OHCI controller support"
        depends on (RALINK_RT3883 || RALINK_RT3352)
	select USB_ARCH_HAS_OHCI
	select USB_ARCH_HAS_EHCI

config  ASUS_EXT
	bool 
	default n
endmenu
